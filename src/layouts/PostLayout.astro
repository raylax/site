---
import type { CollectionEntry } from 'astro:content'
import FormattedDate from '@/components/FormattedDate.astro'
import MainLayout from '@/layouts/MainLayout.astro'
import PostTag from '@/components/post/PostTag.astro'
import '@/layouts/PostLayout.scss'

type Props = CollectionEntry<'post'>['data']

const { title, description, publishedDate, updatedDate, heroImage, tags } = Astro.props
---

<MainLayout title={title} description={description}>
  <div class="pt-4 lg:pt-8">
    <div class="xl:max-w-4xl 2xl:max-w-5xl xl:mx-auto px-2 md:px-0">
      <div class="border-b">
        {
          tags && (
            <div class="mb-2 flex gap-2" transition:name="post-tags">
              {tags.map((tag) => (
                <PostTag>
                  <a href={`/posts/tags/${tag}`}>{tag}</a>
                </PostTag>
              ))}
            </div>
          )
        }
        <h1 class="text-6xl font-bold text-foreground/90 mb-4" transition:name="post-title">{title}</h1>
        <div class="flex justify-between items-center mb-2 text-foreground/90 text-sm" transition:name="post-date">
          <div><FormattedDate date={publishedDate} /> 发布</div>
          {
            updatedDate && (
              <div>
                最后更新于 <FormattedDate date={updatedDate} />
              </div>
            )
          }
        </div>
      </div>
      <slot />
    </div>
  </div>
</MainLayout>
