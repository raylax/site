---
import { type CollectionEntry } from 'astro:content'
import FormattedDate from '@/components/FormattedDate.astro'
import Card from '@/components/ui/Card.astro'
import PostTag from '@/components/post/PostTag.astro'

type Props = {
  posts: Array<CollectionEntry<'post'>>
}

const { posts } = Astro.props
---

<section class="grid lg:grid-cols-2 xl:grid-cols-3 grid-cols-1 gap-4 pb-4 lg:gap-10 lg:pb-6">
  {
    posts.map(({ slug, body, data }) => (
      <Card class="transition-shadow hover:shadow-lg">
        <a href={`/posts/${slug}`}>
          <img class="object-cover w-full" src={data.heroImage} alt="" />
          <div class="p-4">
            <div class="mb-2 flex gap-2">
              {data.tags.map((tag) => (
                <PostTag>{tag}</PostTag>
              ))}
            </div>
            <h1 class="text-3xl font-bold text-foreground/90 mb-3">{data.title}</h1>
            <p class="text-foreground/90 mb-4 line-clamp-5">{body.substring(0, 400)}</p>
            <div class="flex justify-between items-center mb-2 text-foreground/90 text-sm">
              <div>
                <FormattedDate date={data.publishedDate} /> 发布
              </div>
              {data.updatedDate && (
                <div>
                  最后更新于 <FormattedDate date={data.updatedDate} />
                </div>
              )}
            </div>
          </div>
        </a>
      </Card>
    ))
  }
</section>
