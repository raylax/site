---
import HeaderLink from '@/components/Header/HeaderLink.astro'
import HeaderLinkExtra from '@/components/Header/HeaderLinkExtra.astro'
import { Github } from 'lucide-react'
import { SITE_TITLE } from '@/consts'

const extraIconProps = {
  size: 18
}
---

<header
  class="supports-backdrop-blur:bg-background/60 sticky top-0 border-b bg-background/90 backdrop-blur px-4 lg:px-0 z-10"
>
  <div class="container flex h-16 items-center justify-between">
    <a href="/" class="font-serif italic text-3xl text-gray-600 tracking-widest font-semibold uppercase">{SITE_TITLE}</a>
    <div class="flex gap-10">
      <nav class="flex gap-8 font-medium items-center">
        <HeaderLink href="/">首页</HeaderLink>
        <HeaderLink href="/posts">文章</HeaderLink>
        <HeaderLink href="/about">关于</HeaderLink>
      </nav>
      <div class="flex items-center">
        <HeaderLinkExtra href="https://github.com/raylax">
          <Github {...extraIconProps} />
        </HeaderLinkExtra>
      </div>
    </div>
  </div>
</header>
